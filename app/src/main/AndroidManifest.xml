<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cegepst.example.octo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/octo_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Octo">
        <activity android:name=".views.cards.SingleCardActivity"></activity>
        <activity android:name=".views.cards.CommanderActivity" />
        <activity android:name=".views.FeedActivity" />
        <activity android:name=".views.connexion.LogInActivity" />
        <activity android:name=".views.connexion.MoreInformationActivity" />
        <activity android:name=".views.artists.ArtistActivity" />
        <activity android:name=".views.connexion.ConnexionActivity" />
        <activity android:name=".views.BaseActivity" />
        <activity android:name=".views.cards.MainActivity" />
        <activity android:name=".views.connexion.SignUpActivity" />
        <activity android:name=".views.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>